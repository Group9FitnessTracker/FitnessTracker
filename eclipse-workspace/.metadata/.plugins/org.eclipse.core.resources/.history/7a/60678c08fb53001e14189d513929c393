package dotlab;
public class Dot{
	private String color;
	private int x;
	private int y;
	private int radius;
	
	public Dot(String color,int x, int y,int radius)throws IllegalArgumentException {
		this.color=color;
		this.x=x;
		this.y=y;
		this.radius=radius;
	}
		
	private static String[] LEGAL_COLOR_NAMES =
		{
				"RED", "YELLOW", "BLUE", "CYAN", "GREEN", "MAGENTA", "ORANGE", "BLACK"
		};
	public String getColorName() {
		return color;
	}
	public int getX() {
		return x;
	}
	public int getY() {
		return y;
	}
	public int getRadius() {
		return radius;
	}
	public String toString() {
		return getColorName() + getX() + getY() + getRadius();
	}
	public static void main(String[] args) {
		Dot firstDot = new Dot("RED",1,2,3);
		Dot secondDot = new Dot("mom",100,-1,0);
		System.out.println(firstDot.toString());
		System.out.println(secondDot.toString());
		
	}
}

